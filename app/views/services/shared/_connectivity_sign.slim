.connection-details data-url="#{check_connectivity_path(service_instance)}"
  .connectivity-sign.available.no-display data-toggle='tooltip' data-placement='bottom' title="#{t('services.connectivity.available')}"
    = fa_icon 'check-circle'

  .connectivity-sign.checking data-toggle='tooltip' data-placement='bottom' title="#{t('services.connectivity.checking')}"

  .connectivity-sign.down.no-display data-toggle='tooltip' data-placement='bottom' title="#{t('services.connectivity.down')}"
    = fa_icon 'exclamation-circle'

  .connectivity-sign.undefined.no-display data-toggle='tooltip' data-placement='bottom' title="#{t('services.connectivity.undefined')}"
    = fa_icon 'question-circle'

  = children
