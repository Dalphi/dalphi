li.list-group-item.container
  .inline-container-col.col-xs-10
    a href="#{edit_interface_path(interface)}" title="#{interface.title}"
      = interface.title
      .problem-labels
        - interface.associated_problem_identifiers.each do |problem_name|
          span.tag.tag-default
            = problem_name

  .interface-preview-btn
    = render 'shared/button',
             href: interface_path(interface),
             tooltip: t('interfaces.cards.buttons.preview'),
             icon: 'desktop'
