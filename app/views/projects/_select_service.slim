.card-block
  .card-text
    = simple_form_for project,
      url: update_services_path(project),
      method: :patch do |f|
      .form-inputs
        = f.input service_name.to_sym,
          collection: available_services,
          label_method: -> (service) { service.title },
          input_html: { class: 'c-select' },
          onchange: 'this.form.submit();'
