.container.projects
  = render 'shared/project_header',
           project: @project,
           active_label: 'dashboard'

  .dashboard.row.row-eq-height
    = render 'projects/dashboard/services',
             project: @project,
             available_services: @available_services,
             roles: @roles
    = render 'projects/dashboard/raw_data',
             project: @project,
             available_services: @available_services,
             roles: @roles
    = render 'projects/dashboard/interfaces',
             project: @project,
             interfaces: @interfaces

  .row.btn-row
    .col-xs-12
      = render 'shared/button', type: 'back'
      = render 'shared/button',
               label: t('activerecord.actions.project.edit'),
               icon: 'edit',
               href: edit_project_path(@project)
      = render 'shared/button',
               type: 'danger',
               label: t('activerecord.actions.project.delete'),
               href: project_path(@project),
               icon: 'trash',
               method: 'delete',
               confirm: t('delete-confirm')
      = render 'shared/button',
               label: t('projects.bootstrap.title'),
               tooltip: t('projects.bootstrap.tooltip'),
               icon: 'rocket',
               type: 'submit',
               href: project_bootstrap_path(@project),
               method: 'post'
      = render 'shared/button',
               label: t('projects.annotate.title'),
               tooltip: t('projects.annotate.tooltip'),
               icon: 'tags',
               type: 'primary',
               data: { no_turbolink: 'true' },
               href: project_annotate_path(@project)
      = render 'shared/button',
               label: t('projects.merge.title'),
               tooltip: t('projects.merge.tooltip'),
               icon: 'compress',
               type: 'submit',
               href: project_merge_path(@project),
               method: 'post'
